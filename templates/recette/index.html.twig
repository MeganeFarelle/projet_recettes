{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}

<div class="container mt-4">

    <h1 class="mb-3">Liste des recettes</h1>

    {% if app.user %}
        <p>Connecté en tant que <strong>{{ app.user.email }}</strong></p>
        <a href="{{ path('app_logout') }}" class="btn btn-secondary mb-3">Se déconnecter</a>
    {% endif %}

    <hr>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('recette.create') }}" class="btn btn-success mb-4">
            + Créer une recette
        </a>
    {% endif %}

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th>Nom</th>
                <th>Temps</th>
                <th>Prix</th>
                <th>Difficulté</th>
                <th>Ingrédients</th>
            </tr>
        </thead>

        <tbody>
        
        {% for recette in recettes %}
            <tr>
                <td class="fw-bold">{{ recette.nom }}</td>

                <td class="text-center">{{ recette.temps }} min</td>

                <td class="text-center">{{ recette.prix }} €</td>

                <td class="text-center">
                    <span class="badge bg-primary fs-6">
                        {{ recette.difficulte }}/5
                    </span>
                </td>

                <td>
                    {% if recette.ingredients is not empty %}
                        {% for ingredient in recette.ingredients %}
                            <span class="badge bg-success me-1 mb-1">
                                {{ ingredient.nom }}
                            </span>
                        {% endfor %}
                    {% else %}
                        <em>Aucun ingrédient</em>
                    {% endif %}
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="5" class="text-center"><em>Aucune recette trouvée</em></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

</div>

{% endblock %}
