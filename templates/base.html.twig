<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!{% endblock %}
    </title>

    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>‚ö´Ô∏è</text></svg>'">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
          rel="stylesheet">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body class="bg-light">

    {# ======================================================
       HEADER PRINCIPAL
       ====================================================== #}
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold" href="{{ path('recette.index') }}">
                üçΩÔ∏è Mes Recettes
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="collapse navbar-collapse justify-content-end">

                {% if app.user %}
                    <span class="navbar-text me-3">
                        Connect√© : <strong>{{ app.user.email }}</strong>
                    </span>

                    <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">
                        Logout
                    </a>

                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm me-2">
                        Login
                    </a>
                    <a href="{{ path('app_register') }}" class="btn btn-success btn-sm">
                        Register
                    </a>
                {% endif %}

            </div>
        </div>
    </nav>


    {# ======================================================
       NAVIGATION SECONDAIRE: INGREDIENTS ‚Üî RECETTES
       ====================================================== #}
    <nav class="bg-light py-2 border-bottom">
        <div class="container d-flex justify-content-start gap-3">

            <a href="{{ path('app_ingredient') }}"
               class="btn btn-outline-primary btn-sm 
                      {% if app.request.get('_route') starts with 'ingredient' %}active{% endif %}">
                ü•ï Mes ingr√©dients
            </a>

            <a href="{{ path('recette.index') }}"
               class="btn btn-outline-primary btn-sm
                      {% if app.request.get('_route') starts with 'recette' %}active{% endif %}">
                üçΩÔ∏è Mes recettes
            </a>

        </div>
    </nav>


    {# ======================================================
       CONTENU CENTRAL
       ====================================================== #}
    <main class="container my-4">
        {% block body %}{% endblock %}
    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
